@model Post
 @{
    ViewData["Title"] = Model.Title;
}


<style>
    .content-wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .feature-image {
        height: 500px;
        width: 100%;
        object-fit: cover;
        margin-bottom: 20px;
    }
</style>




<div class="content-wrapper">
    @if(User.IsInRole("Admin"))
    {
    <div class="text-end">
        <a class="btn btn-secondary my-3" asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id">Edit Post</a>
        <a class="btn btn-danger my-3" asp-controller="Post" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
    }
    <h1>@Model.Title</h1>
    <p>
        <span class="badge bg-primary">By:</span>@Model.Author | 
        <span class="badge bg-primary">Published On:</span>@Model.PublishedDate.ToString("MMMM dd,yyyy")
    </p>
    <p><span class="badge bg-secondary">Category</span>@Model.Category.Name</p>
    <img src="@Model.FeatureImagePath" alt="@Model.Title" class="feature-image" />
    <hr />

    <div>@Html.Raw(Model.Content)</div>
    <hr />

    @if(@Model.Comments.Any())
    {
    <div id="commentSection">
        @foreach(var comment in Model.Comments)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@comment.UserName</h5>
                    <p class="card-text text-muted">@comment.CommentDate.ToString("MMMM dd,yyyy")</p>
                    <p class="card-text">@comment.Content</p>
                </div>
            </div>
        }
    </div>
    }
    else
    {
    <p class="text-muted">No comments yet.Be the first to comment</p>
    }
    @if(User.Identity.IsAuthenticated)
    {
    <h4>Add a comment</h4>
    <form id="commentForm">
        <div class="form-group">
            <label for="userName">Name</label>
            <input id="userName" name="userName" required class="form-control" />
        </div>

        <div class="form-group">
            <label for="Content">Content</label>
            <textarea for="Content" id="Content" name="Content" rows="3" required class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-2 p-2 rounded">Submit Comment</button>
    </form>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#commentForm").on('submit', function (event) {
                event.preventDefault();
                var userName = $("#userName").val();
                var content = $("#Content").val();
                var postId = @Model.Id;

                $.ajax({
                    //https:localhost:7049/Post/AddComment
                    url: '@Url.Action("AddComment","Post")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        Username: userName,
                        Content: content,
                        PostId: postId
                    }),
                    success: function (response) {
                        $('#commentForm')[0].reset();
                        $('#commentSection').append(
                            `
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                <h5 class="card-title">${response.username}</h5>
                                <p class="card-text text-muted">${response.commentDate}</p>
                                <p class="card-text">${response.content}</p>
                                </div>
                            </div>
                            `
                        )
                    }
                })
            });
        });
    </script>
}