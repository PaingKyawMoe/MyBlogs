@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="login-container mt-4"> @* Changed to match Login *@
    <div class="glass-card"> @* Changed to match Login *@
        <div class="text-center mb-4">
            <h2 class="fw-bold">Join MyBlogs</h2>
            <p class="text-muted">Create an account to start liking and commenting</p>
        </div>

        <form asp-action="Register" asp-controller="Auth" method="post">
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light small fw-medium">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="example@mail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-light small fw-medium">Password</label>
                <div class="position-relative">
                    <input asp-for="Password" type="password" class="form-control pe-5" placeholder="••••••••" />
                    <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y text-muted border-0 bg-transparent pe-3 toggle-password-btn">
                        <i class="bi bi-eye eye-icon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label text-light small fw-medium">Confirm Password</label>
                <div class="position-relative">
                    <input asp-for="ConfirmPassword" type="password" class="form-control pe-5" placeholder="••••••••" />
                    <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y text-muted border-0 bg-transparent pe-3 toggle-password-btn">
                        <i class="bi bi-eye eye-icon"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-login w-100 mb-3">Create Account</button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted small">Already have an account? <a asp-action="Login" class="text-primary text-decoration-none fw-medium">Login here</a></p>
            <a asp-action="Index" asp-controller="Post" class="text-muted small text-decoration-none">
                <i class="bi bi-arrow-left me-1"></i> Back to Blog
            </a>
        </div>
    </div>
</div>