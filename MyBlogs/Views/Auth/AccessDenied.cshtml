@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex justify-content-center align-items-center min-vh-75 mt-5">
    <div class="text-center glass-card p-5 shadow-lg border-0" style="max-width: 500px; border-radius: 20px; background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(10px);">
        
        <div class="mb-4">
            <i class="bi bi-shield-lock text-warning" style="font-size: 4rem;"></i>
        </div>

        <h2 class="fw-bold text-light mb-3">Access Denied</h2>
        
        <p class="text-muted mb-4">
            It looks like you don't have the necessary permissions to view this page. 
            If you believe this is a mistake, please contact the administrator.
        </p>

        <div class="d-grid gap-2">
            <a asp-action="Index" asp-controller="Post" class="btn btn-primary btn-lg rounded-pill">
                Back to Home
            </a>
            <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-light rounded-pill mt-2">
                Back to Login
            </a>
        </div>
    </div>
</div>

<style>
    .min-vh-75 { min-height: 75vh; }
    .glass-card {
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>