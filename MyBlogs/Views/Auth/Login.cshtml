@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}



<div class="login-container mt-4">
    <div class="glass-card">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Welcome Back</h2>
            <p class="text-muted">Please enter your details</p>
        </div>

        <form asp-action="Login" asp-controller="Auth" method="post">
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light small">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label text-light small fw-medium">Password</label>
                @* Find this part in your Login.cshtml and update the button class *@
                <div class="position-relative">
                    <input asp-for="Password" type="password" class="form-control pe-5" placeholder="••••••••" />
                    <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y text-muted border-0 bg-transparent pe-3 toggle-password-btn">
                        <i class="bi bi-eye eye-icon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-login w-100 mb-3">Login</button>
        </form>

        <div class="divider">or continue with</div>

        @* Social Login Buttons *@
        <a href="/Auth/ExternalLogin?provider=Google" class="social-btn w-100">
            <i class="bi bi-google text-danger"></i>Google
        </a>
        <a href="/Auth/ExternalLogin?provider=GitHub" class="social-btn w-100">
            <i class="bi bi-github"></i>GitHub
        </a>

        <div class="text-center mt-4">
            <a asp-action="Index" asp-controller="Post" class="text-muted small text-decoration-none">
                <i class="bi bi-arrow-left"></i>Back to Blog
            </a>
        </div>
    </div>
</div>
