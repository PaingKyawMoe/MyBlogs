@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-10 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <div class="position-relative">
                <div class="position-absolute top-50 start-50 translate-middle bg-primary opacity-10 rounded-circle" style="width: 120%; height: 120%; filter: blur(60px);"></div>
                <img src="https://bagandaytours.com/wp-content/uploads/2017/02/252-9049.jpg" 
                     class="d-block mx-lg-auto img-fluid rounded-5 shadow-lg position-relative" 
                     alt="Bagan Myanmar" width="700" height="500" loading="lazy">
            </div>
        </div>
        <div class="col-lg-6">
            <h1 class="display-2 fw-bold mh-1 mb-3 shimmer-text">Welcome to MyBlogs</h1>
            <p class="lead text-secondary mb-4">
                Discover insightful articles, share your ideas, and explore a world of knowledge. 
                MyBlogs is your space to read, write, and connect through meaningful content.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="#" class="btn btn-primary btn-lg px-4 me-md-2 rounded-pill shadow custom-btn">Get Started</a>
                <a asp-action="Index" asp-controller="Post" class="btn btn-outline-secondary btn-lg px-4 rounded-pill custom-btn">Category</a>
            </div>
        </div>
    </div>
</div>

<div class="container px-4 py-5">
    <div class="row mb-4">
        <div class="col-12 text-center text-m-start">
            <h2 class="display-5 fw-bold mb-3">Why People Choose MYBLOGS</h2>
            <div class="bg-primary mb-4 mx-auto mx-lg-0" style="height: 4px; width: 80px; border-radius: 2px;"></div>
        </div>
    </div>

    <div class="row g-5 align-items-center">
        <div class="col-lg-6">
            <div id="travelCarousel" class="carousel slide carousel-fade shadow-lg rounded-5 overflow-hidden" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=800&q=80" class="d-block w-100" alt="Coast" style="height: 450px; object-fit: cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?auto=format&fit=crop&w=800&q=80" class="d-block w-100" alt="Mountains" style="height: 450px; object-fit: cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.unsplash.com/photo-1503220317375-aaad61436b1b?auto=format&fit=crop&w=800&q=80" class="d-block w-100" alt="Adventure" style="height: 450px; object-fit: cover;">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-compass text-primary fs-3 me-3"></i>
                    <h4 class="fw-bold mb-0">Expert Travel Insights</h4>
                </div>
                <p class="text-secondary fs-5">
                    Our platform provides in-depth analysis and personal experiences from seasoned globetrotters. We don't just list places; we tell stories that help you navigate culture and history.
                </p>
            </div>

            <div class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-people text-primary fs-3 me-3"></i>
                    <h4 class="fw-bold mb-0">Growing Global Community</h4>
                </div>
                <p class="text-secondary fs-5">
                    Connect with thousands of like-minded travelers. Share your own blog posts, comment on others, and build a network of friends across every continent.
                </p>
            </div>

            <div class="mb-0">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-bookmark-star text-primary fs-3 me-3"></i>
                    <h4 class="fw-bold mb-0">High Quality Content</h4>
                </div>
                <p class="text-secondary fs-5">
                    Every article is curated to ensure accuracy and inspiration. From budget tips to luxury escapes, MYBLOGS is the gold standard for travel information.
                </p>
            </div>
        </div>
    </div>
</div>

