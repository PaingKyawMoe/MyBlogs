@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark"> <head>
    <meta charset="utf-8" />
    <meta name="csrf-token" content="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBlogs</title>

    <link rel="stylesheet" href="~/lib/bootwatch/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/welcome.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyBlogs.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        @Html.Partial("_Navbar.cshtml")
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container">
            &copy; 2026 - MyBlogs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
    <script src="~/js/reply.js" asp-append-version="true"></script>@await RenderSectionAsync("Scripts", required: false)
</body>
</html>